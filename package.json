{
  "name": "desktop_partner",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:user": "vitest run tests/user",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "build:all": "npm run build && npm run test && tauri build",
    "deploy:windows": "tauri build --target x86_64-pc-windows-msvc",
    "deploy:macos": "tauri build --target x86_64-apple-darwin",
    "deploy:linux": "tauri build --target x86_64-unknown-linux-gnu"
  },
  "dependencies": {
    "@pixiv/three-vrm": "^3.4.2",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@xenova/transformers": "^2.17.2",
    "three": "^0.178.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/three": "^0.178.1",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  }
}
